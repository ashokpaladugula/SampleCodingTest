<form>
    <div class="container">
        <div class="row">
            <label id="headerLable" class="text-center font-weight-bold">Sample Page</label>
        </div>
        <div class="row mt-3">
            <div class="col-md-1">
                <label id="lblFirstName">First Name</label>
            </div>
            <div class="col-md-11">
                <input type="text" id="firstName" name="firstName" class="form-control" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-1">
                <label id="lbleLastName">Last Name</label>
            </div>
            <div class="col-md-11">
                <input type="text" id="lastName" name="firstName" class="form-control" />
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-1">
            </div>
            <div class="col-md-11">
                <input type="button" id="btn-submit" class="btn btn-primary" value="Submit" />
            </div>
        </div>

    </div>
</form>

<script>

    var apiBaseUrl = 'http://localhost:31386/api/';
      
    $('#btn-submit').bind('click', function () {
        var firstName = $('#firstName').val(),
            lastName = $('#lastName').val();
        $.ajax({
            url: apiBaseUrl + "sample",
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ FirstName: firstName, LastName: lastName }),
            success: function (d) {
                alert("Saved Successfully");
            },
            error: function () {
                alert("Error please try again");
            }
        });


    });


</script>